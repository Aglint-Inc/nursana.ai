{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "useUnknownInCatchVariables": false,
    "noErrorTruncation": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/common/*": ["./app/_common/*"],
      "@/trpc/*": ["./app/trpc/*"],
      "@/components/*": ["./components/*"],
      "@/utils/*": ["./utils/*"],
      "@/supabase-types/*": ["src/supabase-types/*"],
      "@/server/*": ["./server/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/audio/*": ["./lib/audio/*"],
      "@/applicant/*": ["./app/(authenticated)/(applicant)/_common/*"],
      "@/dashboard/*": [
        "./app/(authenticated)/(applicant)/dashboard/_common/*"
      ],
      "@/authenticated/*": ["./app/(authenticated)/_common/*"],
      "@/hospital/*": ["./app/(authenticated)/(hospital)/_common/*"],
      "@/campaigns/*": ["./app/(authenticated)/(hospital)/campaigns/_common/*"],
      "@/campaign/*": [
        "./app/(authenticated)/(hospital)/campaigns/[campaign]/_common/*"
      ]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next", "edge_function"]
}
